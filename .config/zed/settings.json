// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "agent": {
    "profiles": {
      "plan": {
        "name": "Plan",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "always_allow_tool_actions": false
  },
  "tab_bar": { "show": false },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "project_panel": {
    "auto_reveal_entries": false
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Frapp√© - No Italics"
  },
  "inlay_hints": {
    "enabled": true
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 12,
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "languages": {
    "Elixir": {
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "..."
      ]
    }
  }
}
